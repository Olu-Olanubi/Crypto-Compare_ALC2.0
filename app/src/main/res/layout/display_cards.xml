<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/displaycards"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="10dp"
    card_view:contentPaddingRight="10dp">
        <!-- content goes here -->
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/display_layout"
            >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width = "wrap_content"
                android:id = "@+id/currency_logo"
                android:layout_marginTop = "4dp"
                android:layout_marginBottom= "4dp"
                android:layout_marginLeft = "16dp"
                android:layout_marginRight = "8dp"
                android:layout_alignParentLeft="true"
                android:textSize = "28sp"
                android:textStyle ="bold"
                android:text = "USD"


                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width = "wrap_content"
                android:id = "@+id/BTC"
                android:layout_marginTop = "4dp"
                android:layout_marginBottom= "4dp"
                android:layout_toRightOf="@id/currency_logo"
                android:layout_marginRight = "3dp"
                android:layout_marginLeft = "16dp"
                android:textSize = "18sp"
                android:text = "BTC:"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width = "wrap_content"
                android:id = "@+id/btcValue"
                android:layout_marginTop = "4dp"
                android:layout_marginBottom= "4dp"
                android:layout_toRightOf="@id/BTC"
                android:layout_marginLeft = "3dp"
                android:textSize = "18sp"
                android:textColor ="@color/btcColor"
                android:textStyle ="bold"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width = "wrap_content"
                android:id = "@+id/ETH"
                android:layout_marginTop = "4dp"
                android:layout_marginBottom= "4dp"
                android:layout_below = "@id/BTC"
                android:layout_toRightOf = "@id/currency_logo"
                android:layout_marginRight = "3dp"
                android:layout_marginLeft = "24dp"
                android:textSize = "18sp"
                android:text = "ETH:"

                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width = "wrap_content"
                android:id = "@+id/ethValue"
                android:layout_marginTop = "4dp"
                android:layout_marginBottom= "4dp"
                android:layout_toRightOf="@id/ETH"
                android:layout_below ="@id/btcValue"
                android:layout_marginLeft = "3dp"
                android:textSize = "18sp"
                android:textColor = "@color/ethColor"
                android:textStyle ="bold"
                android:text = "35790"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

